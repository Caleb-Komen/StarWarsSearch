<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/characterSearchFragment">

    <fragment
        android:id="@+id/characterSearchFragment"
        android:name="com.arch.starwarssearch.ui.charactersearch.CharacterSearchFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_character_search" >
        <action
            android:id="@+id/action_characterSearchFragment_to_characterDetailFragment"
            app:destination="@id/characterDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/characterDetailFragment"
        android:name="com.arch.starwarssearch.ui.characterdetail.CharacterDetailFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_character_detail" >
        <argument
            android:name="character"
            app:argType="com.arch.starwarssearch.model.CharacterPresentation" />
    </fragment>
</navigation>